$(function(){
    //热门搜索之实现
    $.ajax({
        type: "POST",
        url: path+"/HotSearch.json",
        async: false,//设置同步提交，这样可以将值返回
        dataType: "json",
        success:function(data){
            $("#searchtj").empty();//由于切换是ajax不刷新页面所以，在更新车辆时得清空下
            var div1="";
            var div2="<span>热门搜索：</span>";
            for(var i=0;i<data.length;i++){
                var obj=data[i];
                //通过字段判断是否是平台
                if(obj.si_createPlatform==2){
                    div1+='<a href="'+path+'/search?type=s&query='+obj.si_keyWord+'">'+obj.si_keyWord+'</a>';
                }else if(obj.si_createPlatform==1){
                    div1+='<a href="'+obj.si_searchUrl+'">'+obj.si_keyWord+'</a>';
                }
            }
            var div=div2+div1;
            $("#searchtj").append(div);
        }
    });
    //转换
    file();
});

function file(){
	
	$("#searchtj a").each(function(){
		if($(this).attr("href").indexOf("query=")>1){
			var url=encodeURI($(this).attr("href"));
			//var u=url.substring(url.indexOf("/search")+1);
			$(this).attr("href",encodeURI(url)); 	
		}
		});
}
	


