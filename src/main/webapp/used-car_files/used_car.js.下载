$(function(){
    $(".nav_v a").click(function() {
        $(this).siblings().removeClass('active');
        $(this).addClass('active');
    });
}); 
$(window).scroll(function(){
    var header = $("#header").height();
    var hr = $(".banner .img").height();
    
    if($(window).scrollTop()>= (header + hr)){
       $(".nav_w").addClass("active");
    }else{
       $(".nav_w").removeClass("active");
    }
})